@model IEnumerable<SocialNetwork.Models.Circle>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CircleId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CircleId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", "Circle", new { id = item.CircleId }) |
                @Html.ActionLink("Details", "Details", "Circle", new { id = item.CircleId}) |
                @Html.ActionLink("Delete", "Delete", "Circle", new { id = item.CircleId })|
                @Html.ActionLink("Add user to circle", "AddUser", "Circle", new{id = item.CircleId})
            </td>
        </tr>
}
    </tbody>
</table>
