@{
    ViewData["Title"] = "DetailsFromUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Wall

<h1>DetailsFromUser</h1>
<div>
    <h4>Wall</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WallId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WallId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Circle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Circle)
        </dd>
    </dl>
</div>
<div>
    <h4>Posts: </h4>
    <ul>
        @{
            foreach (var post in Model.Posts)
            {
        <li >@Html.ActionLink($"{post}", "DetailsFromUser", "Post", new { postId = post, viewerId = (ViewData["visitor"] as string) })</li>
            }
        }
    </ul>
</div>