@model SocialNetwork.Models.Circle

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Circle</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CircleId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CircleId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WallId)
        </dt>
        <dd class="col-sm-10">
            @Html.ActionLink($"{Model.WallId}", "DetailsFromCircle", "Wall", new { circleId = Model.CircleId, userId = (ViewData["userId"] as string) })
        </dd>

    </dl>
</div>
<div>
    <h2>Users:</h2>
    @{
        var users = ViewData["Message"] as List<string>;
        foreach (var user in users)
        {
            <h6>@user</h6>
        }
    }
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new {id = Model.CircleId}) |
    <a asp-action="Index">Back to List</a>
</div>
