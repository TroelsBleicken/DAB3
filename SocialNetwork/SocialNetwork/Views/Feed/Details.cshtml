@model SocialNetwork.Models.Feed

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Feed</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FeedId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FeedId)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.FeedId }) |
    <a asp-action="Index">Back to List</a>
</div>
<div>
    <h3>Posts on @Model.User.Name's feed</h3>
    @{
        if (Model.Posts != null)
        {
            foreach (var post in Model.Posts)
            {
                <div class="comment">
                    <h5>@post.OwnerId</h5>
                    @post.Text
                    <br/>
                    Comments:
                    @{
                        if (post.Comments != null)
                        {
                            foreach (var comment in post.Comments)
                            {
                                <div>@comment.Text</div>
                            }
                        }
                        
                    }
                    <br/><br/><br/>
                </div>
            }
        }
    }
</div>
