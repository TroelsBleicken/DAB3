@model SocialNetwork.Models.Comment

@{
    ViewData["Title"] = "Create";
}


<hr />
Leave comment as @Model.CommenterId
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-controller="Comment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="CommentId"/>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="PostId" value="@Model.PostId"/>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="CommenterId" value="@Model.CommenterId"/>
            </div>
            <div class="form-group">
                <label>Comment:</label>
                <input asp-for="Text" class="form-control" />
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="TimeStamp" value="@DateTime.Now"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
